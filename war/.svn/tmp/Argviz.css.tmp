.intensity-0 {
  background-color:#F2F0F7 ;
}
.intensity-1 {
  background-color:#DADAEB ;
}
.intensity-2 {
  background-color:#BCBDDC ;
}
.intensity-3 {
  background-color:#9E9AC8 ;
}
.intensity-4 {
  background-color:#807DBA ;
}
.intensity-5 {
  background-color: #6A51A3;
}
.intensity-6 {
  background-color: #4A1486;
}


h1 {
  font-size: 2em;
  font-weight: bold;
  color: #777777;
  margin: 40px 0px 70px;
  text-align: center;
}

.sendButton {
  display: block;
  font-size: 16pt;
}

/** Most GWT widgets already have a style name defined */
.gwt-DialogBox {
  width: 400px;
}

.dialogVPanel {
  margin: 5px;
}

.serverResponseLabelError {
  color: red;
}

/** Set ids using widget.getElement().setId("idOfElement") */
#closeButton {
  margin: 15px 6px 6px;
}

/* Formatting specific to the Argviz application */

body {
  padding: 50px;
}

/* header row */
.turnTableHeader {
  background-color: #2062B8;
  color: white;
  font-style: italic; 
}
/* graph columns */
.turnTableGraphColumn {
  text-align: left;
  width:12.5%;
  float:left;
  height:25px;
  border:thin;  
}

/* Main column */
.turnTableMainColumn {
  text-align: left;
  width:50%;
  float:none;
  height:25px; 
  border:medium;  
}

.turnTableMainColumnHighlighted {
  text-align: left;
  border-color: orange;
  border-width: 10px;
  border-style: solid;
  width:20%;
}

/* heatmap column */
.turnTableHeatmapColumn {
  text-align: left;  
  width:12.5%;
  float:none;
  height:25px; 
  border:thin;
}

.cloudWrap {
   text-align : center;
   margin : 50px auto;
   background-color : #FFFFFF;
   padding : 10px;
   width : 75%;
   height:25%;
   line-height : 1.5em;
   border: 1.5em  
   clear: both;
}

.cloudTags {
   float : left;
   padding : 5px;
}

.cloudTags a {
   color : #000000;
   text-decoration : none;
}


